@{ 
    System.Security.Claims.ClaimsIdentity userClaims = User.Identity as System.Security.Claims.ClaimsIdentity;
    string userName = userClaims.Claims.FirstOrDefault(c => c.Type == "preferred_username")?.Value;
}
@if (Request.IsAuthenticated)
{
    <text>
    <ul class="nav navbar-nav navbar-right">
        <li class="navbar-text">
            Hello, @userName!
        </li>
        <li>
            @Html.ActionLink("Sign out", "SignOut", "Account")
        </li>
    </ul>
    </text>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Sign in", "SignIn", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
